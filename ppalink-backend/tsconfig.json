{
    "compilerOptions": {
      "target": "ES2020",                        
      "module": "NodeNext",                      
      "rootDir": "src",                          
      "outDir": "dist",                          
      "strict": true,                            
      "esModuleInterop": true,                   
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                      
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true                  
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  