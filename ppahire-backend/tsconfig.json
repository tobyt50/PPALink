{
    "compilerOptions": {
      "target": "ES2020",                        // JS version output
      "module": "commonjs",                      // Node.js module system
      "rootDir": "src",                          // source files
      "outDir": "dist",                          // compiled files
      "strict": true,                            // enable all strict checks
      "esModuleInterop": true,                   // allows default imports from CJS modules
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                      // skip type checking of node_modules
      "moduleResolution": "node",                // helps TS find modules
      "resolveJsonModule": true                  // allows importing JSON files
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  